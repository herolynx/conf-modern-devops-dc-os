{
    "id": "dcos-java-sample",
    "acceptedResourceRoles": [ "slave_public" ],
    "container": {
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "type": "DOCKER",
      "docker": { "image": "mwrona/dcos-java-sample:0.0.1" }
    },
    "cpus": 0.5,
    "instances": 2,
    "mem": 256,
    "networks": [ { "mode": "container/bridge" } ],
    "healthChecks": [
      {
        "gracePeriodSeconds": 30,
        "intervalSeconds": 5,
        "maxConsecutiveFailures": 3,
        "path": "/probe/health",
        "portIndex": 0,
        "protocol": "HTTP",
        "timeoutSeconds": 5
      }
    ]
}